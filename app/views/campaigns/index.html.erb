
<div class="pagetitle">
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active">Campaigns</li>
    </ol>
  </nav>
</div>

<section class="section objectDataList" data-object-class="<%= modal_class %>">  
  <div class="col-lg-12 col-sm-12">
    <div class="card">
      <div class="card-header">
        <div class="row align-items-center">
          <div class="col mr-auto">
            <h4>Campaigns</h4>
          </div>
          <div class="col col-auto pr-2">
            <%= link_to new_template_account_campaigns_path(current_account), method: :GET, remote: true, class: "btn btn-sm btn-theme" do %>
              <i class="bi bi-plus-circle-fill"></i> Add Campaign
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="container-fluid ListTableData">
        <div class="row">
          <div class="col-lg-3">
            <%= render "folders/folders", folders: @folders %>
          </div>

          <div class="col-lg-9">
            <%= render "campaigns/campaign_data" %>
            <div class="clearfix">
              <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
              <ul class="pagination">
                <li class="page-item disabled"><a href="#">Previous</a></li>
                <li class="page-item"><a href="#" class="page-link">1</a></li>
                <li class="page-item"><a href="#" class="page-link">2</a></li>
                <li class="page-item active"><a href="#" class="page-link">3</a></li>
                <li class="page-item"><a href="#" class="page-link">4</a></li>
                <li class="page-item"><a href="#" class="page-link">5</a></li>
                <li class="page-item"><a href="#" class="page-link">Next</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
