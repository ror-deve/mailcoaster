<div class="pagetitle">
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active">Domains</li>
    </ol>
  </nav>
</div>

<section class="section objectDataList" data-object-class="<%= modal_class %>">  
  <div class="col-lg-12 col-sm-12">
    <div class="card">
      <div class="card-header">
        <div class="row align-items-center">
          <div class="col mr-auto">
            <h4>Domains</h4>
          </div>
          <div class="col col-auto pr-2">
            <%= link_to new_account_domain_path(current_account), method: :GET, remote: false, class: "btn btn-sm btn-theme" do %>
              <i class="bi bi-plus-circle-fill"></i> Add Domain
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="container-fluid ListTableData">
        <div class="row">
          <div class="col-lg-12">
            <%= render "domains" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
