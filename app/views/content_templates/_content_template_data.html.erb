<div id="contentTemplateData" >
  <div class="table-wrapper">
    <% if @content_templates.present? %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th></th>
            <th></th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody >
          <% @content_templates.each do |content_template| %>
            <tr>
              <td><%= content_template.name %></td>
              <td></td>
              <td></td>
              <td><%= content_template.created_at %></td>
              <td><%= content_template.updated_at %></td>
              <td>
                <%= link_to preview_account_content_template_path(current_account, content_template), method: :GET, target: "_blank", class: "preview" do %>
                  <i class="bi bi-eye-fill" title="Preview"></i>
                <% end %>
                <%= link_to edit_account_content_template_path(current_account, content_template), class: "edit" do %>
                  <i class="bi bi-pencil-fill" title="Edit"></i>
                <% end %>
                <%= link_to "javascript:void(0);", class:"delete contentTemplateDelete", data: { bs_toggle: "modal", bs_target: "#ciFolderDeleteConfirmation", account_id: current_account.id, content_template_id: content_template.id } do %>
                  <i class="bi bi-trash-fill" title="Delete"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
      </tbody>
      </table>
    <% else %>
      <div class="emptyList">
        <h4>ohhh..You do not have any content template here...!</h4>
        <%= image_tag 'empty-box.png'%>
      </div>
    <% end %>
  </div>
<div>

<!-- Content Template Pagination-->
<% if @content_templates.any? %>
  <%= render partial: 'shared/pagination', locals: { data: @content_templates, folder_id: @folder_id } %>
<% end %>

